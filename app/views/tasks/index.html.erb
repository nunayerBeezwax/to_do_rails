<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.name %></a>
      <form action="/tasks/<%= task.id %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <input name="done" type="hidden" value="true">
        <input name="name" type="hidden" value="task.name">
        <button>Mark done</button>
      </form></li>
  <% end %>

  <p><button><a href="/tasks/new">Create a new task.</a></button></p>
</ul>



